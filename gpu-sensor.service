[Unit]
Description=GPU Sensor Daemon - Expose GPU load as system sensor
After=multi-user.target
wants=multi-user.target

[Service]
Type=simple
ExecStart=/usr/local/bin/gpu_sensor_daemon
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/run/gpu-sensor

[Install]
WantedBy=multi-user.target
